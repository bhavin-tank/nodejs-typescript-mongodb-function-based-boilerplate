{
  "name": "startkit-nodejs",
  "version": "1.0.0",
  "description": "A versatile Node.js Starter Kit built with TypeScript, Express, and Mongoose. Designed for developers to kickstart backend development with a pre-configured setup for building scalable, secure, and efficient server-side applications. Features include environment configuration, authentication, input validation, and support for rapid development with pre-defined scripts for building, formatting, and linting. Ideal for any general-purpose backend project.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/server.js",
    "start:dev": "nodemon -r dotenv/config -r tsconfig-paths/register src/server.ts",
    "knex": "knex --knexfile library/surefy/src/config/knex.config.ts",
    "prettier": "prettier --check 'src/**/*.{js,ts,tsx,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,ts,tsx,json}'",
    "format": "pnpm prettier:fix",
    "clean": "rimraf dist"
  },
  "keywords": [
    "Node.js starter kit",
    "General purpose backend",
    "TypeScript backend",
    "Express.js framework",
    "Mongoose ODM",
    "API development",
    "Authentication and authorization",
    "Input validation",
    "Scalable architecture",
    "Backend boilerplate"
  ],
  "author": "bhavin-tank",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
